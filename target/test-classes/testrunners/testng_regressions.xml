<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Test Suite" thread-count="3"><!--  parallel="tests" for parallel testing -->

    <listeners>
        <listener class-name="com.qa.playwright.listeners.ExtentReportListener" />
