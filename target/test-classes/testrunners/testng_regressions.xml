    <test name="Open Cart Home Page Test_chrome 1">
        <parameter name="browser" value="chromium" />
        <classes>
            <class name="com.qa.playwright.tests.HomePageTest" />
        </classes>
    </test>

    <test name="Open Cart Home Page Test_chrome 2">
        <parameter name="browser" value="firefox" />
