    </test>

    <test name="Open Cart Home Page Test_chrome 3">
        <parameter name="browser" value="safari" />
        <classes>
            <class name="com.qa.playwright.tests.HomePageTest" />
        </classes>
    </test>

    <test name="Open Cart Home Page Test_chrome 4">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.playwright.tests.HomePageTest" />
        </classes>
    </test>

    <test name="Open Cart Home Page Test_chrome 5">
